[color]
  diff = always
  ui = auto
[alias]
  st = status
  co = checkout
[pull]
  rebase = true
[init]
  templatedir = ~/.config/git/templates
[commit]
  verbose = 1
  template = ~/.config/git/commit-message-template

[filter "lfs"]
  process = git-lfs filter-process
  required = true
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f

[difftool]
  prompt = false
[diff]
  tool = meld
[difftool "meld"]
  cmd = meld \"$LOCAL\" \"$REMOTE\"
[diff "sopsdiffer"]
  textconv = sops -d
