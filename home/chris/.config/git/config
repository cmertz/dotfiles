[color]
  diff = always
  ui = auto
[alias]
  st = status
  co = checkout
[pull]
  rebase = true
[init]
  templatedir = ~/.config/git/templates
  defaultBranch = main
[commit]
  verbose = 1
  gpgsign = true
  template = ~/.config/git/commit-message-template
[filter "lfs"]
  process = git-lfs filter-process
  required = true
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
