profile dock {
	output eDP-1 disable
	output "Dell Inc. DELL S2722QC HG3PLD3" enable position 0,0

	exec /usr/local/lib/sway-random-background /data/wallpapers
	exec swaymsg 'workspace --no-auto-back-and-forth 1'
}

profile standalone {
	output eDP-1 enable

	exec /usr/local/lib/sway-random-background /data/wallpapers
	exec swaymsg 'workspace --no-auto-back-and-forth 1'
}
